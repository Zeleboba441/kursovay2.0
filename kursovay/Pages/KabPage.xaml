<Page x:Class="kursovay.Pages.KabPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursovay.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="KabPage">

    <StackPanel Background="#FFFDFDFD">
        <Label Content="Номер кабинета"/>
        <TextBox Text="{Binding EditKab.Nomer}"/>

        <Button Content="Сохранить и закрыть" Command="{Binding SaveKabinet}"/>
    </StackPanel>
</Page>
