<Page x:Class="kursovay.Pages.ReagentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kursovay.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReagentsPage">

    <StackPanel Background="#FF7EFF7E" RenderTransformOrigin="0.496,0.49">
        <Label Content="Название реагента"/>
        <TextBox Text="{Binding EditReagent.Name}"/>

        <Button Content="Сохранить и закрыть" Command="{Binding SaveReagent}" Height="49"/>
        <Button x:Name="button" Content="Меню" Height="69" Command="{Binding MainMenu}"/>
    </StackPanel>
</Page>